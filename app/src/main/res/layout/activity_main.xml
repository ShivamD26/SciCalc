<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn0"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FFFFFF"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="672dp" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/btn0"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FFFFFF"
        android:text="."
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="672dp" />

    <Button
        android:id="@+id/btnPi"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/btnDot"
        android:background="@drawable/round_btn"
        android:text="π"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnEq"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/btnPi"
        android:background="@drawable/round_btn"
        android:text="="
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btn0"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_btn"
        android:text="1"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btnDot"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btn1"
        android:background="@drawable/round_btn"
        android:text="2"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btnPi"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btn2"
        android:background="@drawable/round_btn"
        android:text="3"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnEq"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btn3"
        android:background="@drawable/round_btn"
        android:text="+"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_btn"
        android:text="4"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btn2"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btn4"
        android:background="@drawable/round_btn"
        android:text="5"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btn3"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btn5"
        android:background="@drawable/round_btn"
        android:text="6"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnPlus"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btn6"
        android:background="@drawable/round_btn"
        android:text="-"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btn4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_btn"
        android:text="7"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btn5"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btn7"
        android:background="@drawable/round_btn"
        android:text="8"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btn6"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btn8"
        android:background="@drawable/round_btn"
        android:text="9"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnMinus"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btn9"
        android:background="@drawable/round_btn"
        android:text="×"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnSin"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btn7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_btn"
        android:text="sin"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnCos"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btn8"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btnSin"
        android:background="@drawable/round_btn"
        android:text="cos"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnTan"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btn9"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btnCos"
        android:background="@drawable/round_btn"
        android:text="Tan"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnMul"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btn9"
        android:background="@drawable/round_btn"
        android:text="÷"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btns9"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnSin"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_btn"
        android:text="("
        android:textSize="25dp" />

    <Button
        android:id="@+id/btns0"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnCos"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btns9"
        android:background="@drawable/round_btn"
        android:text=")"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnPow"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnTan"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btns0"
        android:background="@drawable/round_btn"
        android:text="x^"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnLog"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btn9"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@+id/btnPow"
        android:background="@drawable/round_btn"
        android:text="log"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnLog"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btnPow"
        android:background="@drawable/round_btn"
        android:text="C"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnRoot"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnDivide"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btnLog"
        android:background="@drawable/round_btn"
        android:text="√"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnAc"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btnRoot"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@+id/btnClear"
        android:background="@drawable/round_btn"
        android:text="AC"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textIp1"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_above="@+id/btnClear"
        android:gravity="bottom"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="90dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textIp2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_above="@+id/textIp1"
        android:gravity="bottom"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#AFABAB"
        android:textSize="50dp"
        tools:ignore="RtlCompat" />

</RelativeLayout>